<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="413dp"
        android:layout_height="845dp"
        android:background="#B4121212"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:id="@+id/sec_1"
            android:layout_width="match_parent"
            android:layout_height="373dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/background"
                android:contentDescription="@string/todo" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/sec_2"
            android:layout_width="413dp"
            android:layout_height="155dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:layout_below="@+id/sec_1">

            <Button
                android:id="@+id/light"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@android:drawable/divider_horizontal_dark"
                android:backgroundTint="#669A50"
                app:backgroundTint="#51274328"
                app:backgroundTintMode="add"
                app:icon="@drawable/ic_baseline_lightbulb_24"
                app:iconSize="150dp"
                app:iconTint="#D5254900"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/fan"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@android:drawable/divider_horizontal_dark"
                android:backgroundTint="#669A50"
                app:backgroundTint="#51274328"
                app:backgroundTintMode="add"
                app:icon="@drawable/fan"
                app:iconSize="150dp"
                app:iconTint="#D5254900"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sec_3"
            android:layout_width="413dp"
            android:layout_height="155dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:layout_below="@+id/sec_2">

            <Button
                android:id="@+id/takePhoto"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@android:drawable/divider_horizontal_dark"
                android:backgroundTint="#669A50"
                app:backgroundTint="#51274328"
                app:backgroundTintMode="add"
                app:icon="@drawable/camera"
                app:iconSize="150dp"
                app:iconTint="#D5254900"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/doorState"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@android:drawable/divider_horizontal_dark"
                android:backgroundTint="#669A50"
                app:backgroundTint="#51274328"
                app:backgroundTintMode="add"
                app:icon="@drawable/doorclose"
                app:iconSize="150dp"
                app:iconTint="#D5254900"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>